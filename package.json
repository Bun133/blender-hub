{
  "name": "blender-hub",
  "version": "1.1.0-rc.2",
  "main": "src/index.js",
  "repository": "https://github.com/Chipsnet/blender-hub.git",
  "author": "Minato86 <doronomori660@outlook.jp>",
  "license": "MPL-2.0",
  "dependencies": {
    "electron-log": "^4.2.0",
    "electron-updater": "^4.3.1",
    "node-zip": "^1.1.1"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.minato86.blenderhub",
    "files": [
      "!config.json",
      "!publish.bat"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "publish": ["github"]
    }
  },
  "devDependencies": {
    "electron": "9.0.0",
    "electron-builder": "22.7.0"
  }
}
